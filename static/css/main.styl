body
    font-size: 0.875rem

footer
    margin-top: 2em
    background-color: #f7f7f7
    padding: 1em 0
    color: #747474

    p
        margin: 0 auto
        display: table

.load-wrapper
    padding: 1em

nav
    background-color: #B71C1C

.page-title
    padding: 1em 0
    background-color: #f7f7f7
    margin-bottom: 1em

    p
        margin: 0
        padding: 0
        font-weight: bold

.form-control.ng-invalid:not(.ng-untouched)
    border-color: #dc3545
    padding-right: 2.25rem
    background-repeat: no-repeat
    background-position: center right calc(2.25rem / 4)
    background-size: calc(2.25rem / 2) calc(2.25rem / 2)
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23dc354â€¦%3e%3ccircle cy='3' r='.5'/%3e%3ccircle cx='3' cy='3' r='.5'/%3e%3c/svg%3E")

    &:focus
        border-color: #dc3545
        box-shadow: 0 0 0 0.2rem rgba(220,53,69,.25)

form .invalid-feedback
    display: block !important

.some-breathing-room
    margin-top: 1em

.a-little-to-the-left
    margin-left: 5px

.a-little-to-the-right
    margin-right: 5px

.inline-block
    display: inline-block

.inline-button
    display: inline

.pool-sample-photos
.artist-sample-photos
    img
        max-width: 280px
        max-height: 280px
        margin-bottom: 1rem

.form-control-dark
    color: #fff
    background-color: rgba(255,255,255,0.1)
    border-color: rgba(255,255,255,0.1)

.form-control-dark:focus
    border-color: transparent
    box-shadow: 0 0 0 3px rgba(255,255,255,0.25)

.border-top
    border-top: 1px solid #e5e5e5

.border-bottom
    border-bottom: 1px solid #e5e5e5

.notify
    position: fixed !important
    top: 1em
    left: 1em
    z-index: 10000

.navbar-collapse
    justify-content: space-between

i.fas + span,
i.far + span,
i.fal + span
    margin-left: 5px

.buttons
    a
    button
        margin-right: .25rem

td
th
    white-space: nowrap

.modal-body .col.ng-scope
    min-width: 100%

.btn.btn-xsm
    padding: .10rem .5rem
    font-size: .875rem
    line-height: 1.5
    border-radius: .2rem

.nothing-here
    margin-top: .5rem

    i
        color: #d4e1f0

    span
        font-weight: bold

.icon-color-blue
    color: #007bff

.icon-color-red
    color: #dc3545

@media (max-width: 575px)
    .col
        flex-basis: auto !important
    .row .col:not(:first-child)
        margin-top: 1rem
    .notify
        right: 1em
    .buttons
        overflow: scroll
        white-space: nowrap
